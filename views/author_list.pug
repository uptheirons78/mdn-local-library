extends layout

block content
  h1= title
  table.table
    thead
      tr
        th Name
        th Date of Birth
        th Date of Death
    tbody
    each author in author_list
      tr
        td 
          a(href=author.url) #{author.name}
        td #{author.date_of_birth_formatted}
        td #{author.date_of_death_formatted}
  
    else
      p There are no authors.