extends layout

block content
  h1= title
  table.table
    thead
      tr
        th Title
        th Imprint
        th Status
        th Due
    tbody
    each val in bookinstance_list
      tr
        td 
          a(href=val.url) #{val.book.title}
        td #{val.imprint}
        if val.status=='Available'
          td.text-success #{val.status}
        else if val.status=='Maintenance'
          td.text-danger #{val.status}
        else
          td.text-warning #{val.status}
        if val.status!='Available'
          td #{val.due_back_formatted}
        else
          td -
  
    else
      p There are no book copies in this library.